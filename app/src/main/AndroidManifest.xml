<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.johnchrisdc.basiclayouts">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:label="LinearLayout" android:name=".LinearLayoutActivity" />
        <activity android:label="FrameLayout" android:name=".FrameLayoutActivity" />
        <activity android:label="RelativeLayout" android:name=".RelativeLayoutActivity" />
        <activity android:label="ScrollView" android:name=".ScrollViewActivity"></activity>
    </application>

</manifest>